/**app.wxss - 海洋蓝主题**/
page {
  background: #F5F7FA;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif;
}

.container {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  min-height: 100vh;
}

/* 主题色变量 */
page {
  --primary-color: #2E7DFF;
  --secondary-color: #4FC3F7;
  --accent-color: #0288D1;
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-light: #999999;
  --bg-white: #FFFFFF;
  --bg-gray: #F5F7FA;
  --border-color: #E0E0E0;
}

/* 通用按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #2E7DFF 0%, #4FC3F7 100%);
  color: #FFFFFF;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 16rpx rgba(46, 125, 255, 0.2);
}

.btn-secondary {
  background: #FFFFFF;
  color: #2E7DFF;
  border: 2rpx solid #2E7DFF;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
}

button {
  background: initial;
  border: none;
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}

/* 卡片样式 */
.card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

/* 文本样式 */
.text-primary {
  color: #2E7DFF;
}

.text-secondary {
  color: #666666;
}

.text-light {
  color: #999999;
}

/* 间距工具类 */
.mt-16 { margin-top: 16rpx; }
.mt-24 { margin-top: 24rpx; }
.mt-32 { margin-top: 32rpx; }
.mb-16 { margin-bottom: 16rpx; }
.mb-24 { margin-bottom: 24rpx; }
.mb-32 { margin-bottom: 32rpx; }
.ml-16 { margin-left: 16rpx; }
.mr-16 { margin-right: 16rpx; }