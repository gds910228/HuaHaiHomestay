/* pages/food/index.wxss */
.food-container {
  min-height: 100vh;
  background: #F5F7FA;
  padding-bottom: 40rpx;
}

/* 选项卡容器 */
.tabs-container {
  display: flex;
  justify-content: space-around;
  background: #FFFFFF;
  margin: 24rpx;
  border-radius: 16rpx;
  padding: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx 12rpx;
  border-radius: 12rpx;
  transition: all 0.3s;
  position: relative;
}

.tab-item.active {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8C61 100%);
}

.tab-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.tab-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 4rpx;
}

.tab-item.active .tab-name {
  color: #FFFFFF;
}

.tab-count {
  font-size: 22rpx;
  color: #999999;
}

.tab-item.active .tab-count {
  color: rgba(255, 255, 255, 0.9);
}

/* 选项卡内容区域 */
.tab-content-area {
  padding: 0 24rpx;
}

/* 页面标题 */
.page-header {
  padding: 32rpx 24rpx;
  background: linear-gradient(135deg, #FF6B35 0%, #4CAF50 100%);
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 8rpx;
}

.page-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 12rpx;
}

.loading-state {
  display: flex;
  justify-content: center;
  padding: 32rpx 0;
}

.loading-text {
  font-size: 26rpx;
  color: #999999;
}

/* 区域分组 */
.area-section {
  margin-bottom: 32rpx;
}

/* 美食列表 */
.food-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.food-item {
  width: 100%;
}

/* 美食卡片 */
.food-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.food-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

/* 有图片的卡片 */
.food-card.has-image {
  display: flex;
  flex-direction: column;
}

.food-card.has-image .food-image {
  width: 100%;
  height: 320rpx;
  object-fit: cover;
}

.food-card.has-image .food-info {
  padding: 24rpx;
}

/* 无图片的卡片 */
.food-card.no-image {
  padding: 24rpx;
}

.food-info {
  display: flex;
  flex-direction: column;
}

.food-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.food-address {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 12rpx;
  line-height: 1.5;
  display: flex;
  align-items: flex-start;
}

.food-desc {
  font-size: 26rpx;
  color: #999999;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.food-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.food-tag {
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #FFF3E0 0%, #FFE0B2 100%);
  border-radius: 8rpx;
  font-size: 22rpx;
  color: #E65100;
  font-weight: 500;
}

.food-actions {
  display: flex;
  justify-content: flex-end;
  padding-top: 16rpx;
  margin-top: 8rpx;
  border-top: 1rpx solid #F0F0F0;
}

.food-card.no-image .food-actions {
  border-top: none;
  padding-top: 8rpx;
}

/* 导航按钮 */
.nav-btn {
  background: linear-gradient(135deg, #2E7DFF 0%, #1565C0 100%);
  color: #FFFFFF;
  border: none;
  border-radius: 12rpx;
  padding: 12rpx 28rpx;
  font-size: 26rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(46, 117, 255, 0.3);
  transition: all 0.2s;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.nav-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.nav-btn text {
  display: inline-block;
}
