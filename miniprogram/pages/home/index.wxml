<!--pages/home/index.wxml-->
<view class="home-container">
  <!-- 顶部欢迎区 -->
  <view class="header-banner">
    <view class="banner-content">
      <text class="banner-title">欢迎来到画海民宿</text>
      <text class="banner-subtitle">探索南澳岛之美</text>
    </view>
    <view class="banner-wave"></view>
  </view>

  <!-- 分类导航 -->
  <view class="categories-container">
    <view class="category-card" wx:for="{{categories}}" wx:key="id" data-id="{{item.id}}" bindtap="navigateToCategory" style="background: {{item.color}}">
      <view class="card-content">
        <view class="card-icon">{{item.icon}}</view>
        <view class="card-text">
          <text class="card-title">{{item.name}}</text>
          <text class="card-desc">{{item.desc}}</text>
        </view>
      </view>
    </view>
  </view>
</view>
