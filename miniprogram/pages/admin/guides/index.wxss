/* pages/admin/guides/index.wxss */
.guides-container {
  min-height: 100vh;
  background: #F5F7FA;
  padding-bottom: 120rpx;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  gap: 16rpx;
  padding: 24rpx;
  background: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.filter-picker {
  flex: 1;
  height: 64rpx;
  background: #F5F7FA;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.picker-value {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: #333333;
}

.picker-arrow {
  font-size: 20rpx;
  color: #999999;
}

/* 攻略列表 */
.guides-list {
  padding: 24rpx;
}

.guide-item {
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.item-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-right: 16rpx;
}

.item-status {
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
}

.item-status.published {
  background: #E8F5E9;
  color: #4CAF50;
}

.item-status.draft {
  background: #FFF3E0;
  color: #FF9800;
}

.item-info {
  display: flex;
  gap: 24rpx;
  margin-bottom: 20rpx;
}

.info-tag {
  padding: 6rpx 16rpx;
  background: #F0F7FF;
  border-radius: 8rpx;
  font-size: 22rpx;
  color: #2E7DFF;
}

.info-text {
  font-size: 24rpx;
  color: #999999;
}

.item-actions {
  display: flex;
  gap: 12rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #F0F0F0;
}

.action-btn {
  flex: 1;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  font-size: 26rpx;
  padding: 0;
}

.action-btn.edit {
  background: #F0F7FF;
  color: #2E7DFF;
}

.action-btn.toggle {
  background: #FFF3E0;
  color: #FF9800;
}

.action-btn.delete {
  background: #FFEBEE;
  color: #F44336;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

/* 添加按钮 */
.add-btn {
  position: fixed;
  right: 32rpx;
  bottom: 100rpx;
  width: 112rpx;
  height: 112rpx;
  background: linear-gradient(135deg, #2E7DFF 0%, #4FC3F7 100%);
  border-radius: 56rpx;
  box-shadow: 0 8rpx 24rpx rgba(46, 125, 255, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.add-icon {
  font-size: 64rpx;
  color: #FFFFFF;
  font-weight: 300;
}
