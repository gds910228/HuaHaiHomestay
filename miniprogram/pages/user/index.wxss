/* pages/user/index.wxss */
.user-container {
  min-height: 100vh;
  background: #F5F7FA;
}

/* 用户信息卡片 */
.user-header {
  position: relative;
  background: linear-gradient(135deg, #2E7DFF 0%, #4FC3F7 100%);
  padding: 60rpx 24rpx 80rpx;
  margin-bottom: -40rpx;
}

.user-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #2E7DFF 0%, #4FC3F7 100%);
}

.user-info {
  position: relative;
  display: flex;
  align-items: center;
  z-index: 2;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 24rpx;
  background: #FFFFFF;
}

.user-detail {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 8rpx;
}

.user-desc {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.auth-btn {
  padding: 12rpx 32rpx;
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 32rpx;
  font-size: 24rpx;
  color: #FFFFFF;
}

/* 统计信息 */
.stats-section {
  display: flex;
  margin: 0 24rpx 24rpx;
  padding: 32rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #2E7DFF;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666666;
}

.stat-divider {
  width: 1rpx;
  background: #E0E0E0;
}

/* 收藏和历史 */
.favorites-section,
.history-section {
  margin: 0 24rpx 24rpx;
  padding: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.section-empty {
  font-size: 24rpx;
  color: #999999;
}

.clear-btn {
  font-size: 24rpx;
  color: #2E7DFF;
}

/* 收藏列表 */
.favorites-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.favorite-item {
  display: flex;
  align-items: center;
  padding: 16rpx;
  background: #F5F7FA;
  border-radius: 12rpx;
  transition: all 0.2s;
}

.favorite-item:active {
  background: #E8F0FE;
}

.favorite-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

.favorite-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.favorite-title {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.favorite-time {
  font-size: 22rpx;
  color: #999999;
}

.favorite-remove {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFFFFF;
  border-radius: 50%;
  font-size: 28rpx;
  color: #999999;
}

/* 历史列表 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 16rpx;
  background: #F5F7FA;
  border-radius: 12rpx;
}

.history-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

.history-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.history-title {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.history-time {
  font-size: 22rpx;
  color: #999999;
}

.empty-state {
  text-align: center;
  padding: 60rpx 0;
}

.empty-text {
  font-size: 26rpx;
  color: #999999;
}

/* 功能菜单 */
.menu-section {
  margin: 0 24rpx 24rpx;
  padding: 0 32rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.menu-label {
  font-size: 28rpx;
  color: #333333;
}

.menu-arrow {
  font-size: 36rpx;
  color: #999999;
  font-weight: 300;
}

.menu-divider {
  height: 1rpx;
  background: #F0F0F0;
}

/* 未登录提示 */
.login-tip {
  text-align: center;
  padding: 32rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #999999;
}
