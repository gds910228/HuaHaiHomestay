/* pages/home/index.wxss */
.home-container {
  min-height: 100vh;
  background: #F5F7FA;
  padding-bottom: 40rpx;
}

/* 顶部欢迎区 */
.header-banner {
  position: relative;
  background: linear-gradient(135deg, #2E7DFF 0%, #4FC3F7 100%);
  padding: 80rpx 32rpx 60rpx;
  overflow: hidden;
}

.banner-content {
  position: relative;
  z-index: 2;
}

.banner-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 12rpx;
}

.banner-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.banner-wave {
  position: absolute;
  bottom: -1rpx;
  left: 0;
  right: 0;
  height: 60rpx;
  background: #F5F7FA;
  border-radius: 50% 50% 0 0 / 100% 100% 0;
}

/* 分类卡片容器 */
.categories-container {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.category-card {
  position: relative;
  display: flex;
  align-items: center;
  padding: 48rpx 32rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: transform 0.3s;
}

.category-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.card-icon {
  font-size: 64rpx;
  margin-right: 24rpx;
}

.card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 8rpx;
}

.card-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.card-arrow {
  position: absolute;
  right: 32rpx;
  font-size: 48rpx;
  color: rgba(255, 255, 255, 0.6);
  font-weight: 300;
}
