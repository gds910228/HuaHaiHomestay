/* pages/home/index.wxss */
.home-container {
  min-height: 100vh;
  background: #F5F7FA;
}

/* 顶部欢迎区 */
.header-banner {
  position: relative;
  background: linear-gradient(135deg, #2E7DFF 0%, #4FC3F7 100%);
  padding: 60rpx 32rpx 80rpx;
  overflow: hidden;
}

.banner-content {
  position: relative;
  z-index: 2;
}

.banner-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 12rpx;
}

.banner-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.banner-wave {
  position: absolute;
  bottom: -1rpx;
  left: 0;
  right: 0;
  height: 60rpx;
  background: #F5F7FA;
  border-radius: 50% 50% 0 0 / 100% 100% 0 0;
}

/* 分类导航 */
.category-scroll {
  position: sticky;
  top: 0;
  z-index: 10;
  background: #FFFFFF;
  padding: 24rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.category-list {
  display: flex;
  padding: 0 24rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-width: 160rpx;
  height: 120rpx;
  margin-right: 16rpx;
  background: #F5F7FA;
  border-radius: 16rpx;
  transition: all 0.3s;
}

.category-item.active {
  background: linear-gradient(135deg, #2E7DFF 0%, #4FC3F7 100%);
}

.category-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.category-name {
  font-size: 24rpx;
  color: #666666;
}

.category-item.active .category-name {
  color: #FFFFFF;
  font-weight: 500;
}

/* 攻略列表 */
.guides-list {
  padding: 24rpx;
}

.guide-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: transform 0.2s;
}

.guide-card:active {
  transform: scale(0.98);
}

.card-image-wrapper {
  position: relative;
  width: 100%;
  height: 360rpx;
}

.card-image {
  width: 100%;
  height: 100%;
}

.card-category {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  padding: 8rpx 20rpx;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  font-size: 22rpx;
  color: #FFFFFF;
}

.card-content {
  padding: 24rpx;
}

.card-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-desc {
  display: block;
  font-size: 26rpx;
  color: #999999;
  line-height: 1.6;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.card-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.tag {
  padding: 6rpx 16rpx;
  background: #F0F7FF;
  border-radius: 8rpx;
  font-size: 22rpx;
  color: #2E7DFF;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #F0F0F0;
}

.card-stats {
  display: flex;
  gap: 24rpx;
}

.stat-item {
  font-size: 24rpx;
  color: #999999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999999;
}

/* 加载状态 */
.loading-more {
  display: flex;
  justify-content: center;
  padding: 32rpx 0;
}

.loading-text {
  font-size: 26rpx;
  color: #999999;
}
