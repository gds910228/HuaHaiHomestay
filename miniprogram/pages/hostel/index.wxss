/* pages/hostel/index.wxss */
.hostel-container {
  min-height: 100vh;
  background: #F5F7FA;
  padding-bottom: 120rpx;
}

/* 相册轮播 */
.album-section {
  position: relative;
  width: 100%;
  height: 500rpx;
  background: #000;
}

.album-swiper {
  width: 100%;
  height: 100%;
}

.album-image {
  width: 100%;
  height: 100%;
}

.album-badge {
  position: absolute;
  bottom: 24rpx;
  right: 24rpx;
  padding: 12rpx 24rpx;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
}

.badge-text {
  font-size: 22rpx;
  color: #FFFFFF;
}

/* 民宿信息 */
.hostel-info {
  margin: 24rpx;
  padding: 32rpx;
}

.info-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.info-desc {
  display: block;
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

.info-location {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #F5F7FA;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.location-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.location-text {
  flex: 1;
  font-size: 26rpx;
  color: #666666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.location-arrow {
  font-size: 36rpx;
  color: #999999;
  font-weight: 300;
}

.contact-actions {
  display: flex;
  gap: 16rpx;
}

.contact-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 120rpx;
  background: linear-gradient(135deg, #2E7DFF 0%, #4FC3F7 100%);
  border-radius: 16rpx;
  padding: 0;
}

.btn-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.btn-text {
  font-size: 24rpx;
  color: #FFFFFF;
}

/* 设施服务 */
.facilities-section {
  margin: 0 24rpx 24rpx;
  padding: 32rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 24rpx;
}

.facilities-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.facility-item {
  display: flex;
  align-items: center;
  padding: 16rpx;
  background: #F0F7FF;
  border-radius: 8rpx;
}

.facility-icon {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #2E7DFF;
  border-radius: 50%;
  font-size: 20rpx;
  color: #FFFFFF;
  margin-right: 12rpx;
  font-weight: bold;
}

.facility-text {
  font-size: 26rpx;
  color: #333333;
}

/* 房型列表 */
.rooms-section {
  padding: 0 24rpx;
}

.room-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.room-images {
  position: relative;
  width: 100%;
  height: 320rpx;
}

.room-swiper {
  width: 100%;
  height: 100%;
}

.room-image {
  width: 100%;
  height: 100%;
}

.room-content {
  padding: 24rpx;
}

.room-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.room-desc {
  display: block;
  font-size: 26rpx;
  color: #999999;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.room-info {
  display: flex;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.info-tag {
  padding: 6rpx 16rpx;
  background: #F5F7FA;
  border-radius: 8rpx;
  font-size: 22rpx;
  color: #666666;
}

.room-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.tag {
  padding: 6rpx 16rpx;
  background: #F0F7FF;
  border-radius: 8rpx;
  font-size: 22rpx;
  color: #2E7DFF;
}

.room-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #F0F0F0;
}

.price-range {
  display: flex;
  flex-direction: column;
}

.price-label {
  font-size: 22rpx;
  color: #999999;
  margin-bottom: 4rpx;
}

.price-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #FF6B35;
}

.room-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  background: #4CAF50;
  border-radius: 50%;
}

.status-text {
  font-size: 24rpx;
  color: #4CAF50;
}

/* 底部操作栏 */
.bottom-action {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx 24rpx;
  background: #FFFFFF;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.06);
  z-index: 10;
}

.action-btn {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
  font-size: 28rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}
